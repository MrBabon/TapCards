<div class="my-8 ml-3">
  <%= link_to :back do %>
    <%= image_tag "chevron-left.svg", alt: "chevron", class: "w-5" %>
  <% end %>
</div>
<div class="flex items-center justify-center my-20">
  <h1 class=" text-TapCard-charcoal text-3xl uppercase">TapCard</h1>
</div>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <div class="text-center">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "rounded w-[85%]" },
                  label_html: { class: "block text-center" } %>
    </div>
    <div class="text-center">
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", class: "rounded w-[85%]" },
                  label_html: { class: "block text-center" } %>

    </div>
    <div class="px-5">
      <%= f.input :remember_me,
                  input_html: { class: "rounded mr-2" },
                  as: :boolean if devise_mapping.rememberable? %>
    </div>
  </div>

  <div class="form-actions flex items-center justify-center">
    <%= f.button :submit, "Log in", class: " py-1 px-5 bg-TapCard-blue rounded-full text-TapCard-lightGray" %>
  </div>
<% end %>

<div class="flex justify-between mx-2 mt-9">
  <%= link_to "Sign up", new_user_registration_path %>
  <%= link_to "Forgot your password?", new_user_password_path %>
</div>

